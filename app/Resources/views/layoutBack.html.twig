<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
   
    <link href="{{asset('images/clevermind/favicon.png')}}" rel="shortcut icon">
    <title>{% block title %}{% endblock title %}</title>
    <link href="{{asset('css/bootstrap.css')}}" rel="stylesheet"/>
    <link href="{{asset('css/style.css')}}" rel="stylesheet"/>
    <link href="{{asset('css/jquery-ui.min.css')}}" rel="stylesheet"/>
    <link href="{{asset('//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')}}" rel="stylesheet"/>
    <link href="{{asset('https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css')}}" rel="stylesheet"/>

</head>
<body>
{% block header %}
    {% include "header.html.twig" %}
{% endblock header %}
{% block fos_user_content %}
{% endblock fos_user_content %}
<div class="container-fluid">
    {% block content %}
        <div class="col-xs-3">
            {% if is_granted("IS_AUTHENTICATED_FULLY")  %}
                {% if is_granted('ROLE_ADMIN')  %}
                    <div class="marginleft">
                        <div id="MainMenu">
                            <div class="list-group panel">
                                {% if linkEvaluationListingOn is defined or linkEvaluationAddOn is defined or linkEvaluationEditOn is defined %}
                                    {% set manageEvaluation = true %}
                                    {% endif %}




                                <a href="#evaluation-item" class="list-group-item list-group-item-success {% if manageEvaluation is defined %}collapse bold-text active{% endif %}"
                                   data-toggle="collapse" data-parent="#MainMenu" aria-exponded=" true" {% if manageEvaluation is defined %}aria-expanded=true{% endif %}>
                                Gestion des évaluations<i class="fa fa-caret-down"></i></a>
                                <div class="collapse {% if manageEvaluation is defined %}in{% endif %}" id="evaluation-item">
                                    <a href="{{ path('evaluation_index')}}" class="list-group-item {% if linkEvaluationListingOn is defined %}bold-text{% endif %}" data-toggle="collapse
{% if linkEvaluationListingOn is defined %}in{% endif %}" data-parent="#SubMenu1">
                                        Liste des évaluations
                                        <i class="fa fa-caret-down"></i>
                                    </a>
                                    <a href="{{ path('evaluation_add')}}" class="list-group-item {% if linkEvaluationAddOn is defined %}bold-text{% endif %}" data-toggle="collapse
{% if linkEvaluationAddOn is defined %}in{% endif %}" data-parent="#SubMenu1">
                                        Ajouter une évaluation
                                        <i class="fa fa-caret-down"></i>
                                    </a>
                                    {% if linkEvaluationEditOn is defined %}
                                    <a href="{{ path('evaluation_edit', { 'id': evaluation.id }) }}" class="list-group-item bold-text" data-toggle="collapse in" data-parent="#SubMenu1">
                                        Modifier une évaluation
                                        <i class="fa fa-caret-down"></i>
                                    </a>
                                    {% endif  %}
                                </div>

                                <a href="#user-item" class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">
                                Gestion des utilisateurs<i class="fa fa-caret-down"></i></a>
                                <div class="collapse" id="user-item">
                                    <a href="" class="list-group-item">Liste des utilisateurs</a>
                                    <a href="" class="list-group-item">Ajouter un nouveau utilisateur</a>
                                </div>

                                <a href="#question-item" class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">
                                Gestion des Question/réponses<i class="fa fa-caret-down"></i></a>
                                <div class="collapse" id="question-item">
                                    <a href="" class="list-group-item">Liste des questions</a>
                                    <a href="" class="list-group-item">Ajouter une question</a>
                                </div>

                                <a href="#candidat-item" class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">
                                Gestion des candidats<i class="fa fa-caret-down"></i></a>
                                <div class="collapse" id="candidat-item">
                                    <a href="" class="list-group-item">Liste des candidats</a>
                                    <a href="" class="list-group-item">Ajouter un candidat</a>
                                </div>

                                <a href="#theme-item" class="list-group-item list-group-item-success {% if topicListActivate is defined %}active{% endif %}" data-toggle="collapse" data-parent="#MainMenu" {% if topicListActivate is defined %}aria-exponded=true{% endif %}>
                                Gestion des themes<i class="fa fa-caret-down"></i></a>
                                <div class="collapse {% if topicListActivate is defined %}in{% endif %} " id="theme-item">
                                    <a href="" class="list-group-item {% if topicListActivate is defined %}bold-text{% endif %}">Liste des Thèmes</a>
                                    <a href="" class="list-group-item">Ajouter un nouveau Thème </a>
                                </div>

                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    {% endblock %}
</div>
{% block javascripts %}
