{% extends "::base.html.twig" %}

{% block title %}Modification de la question{% endblock %}

{% block body %}

    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {# render the task's only field: description #}
        <div class="form-group">
            {{ form_label(form.enonce, "Enoncé", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.enonce) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.enonce, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">

            {{ form_label(form.duree, "Durée", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.duree) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">

            {{ form_label(form.niveau, "Niveau", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.niveau) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.topic, "Thème", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.topic) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.topic, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <h3>Les reponses :</h3>
        <ul class="reponses" data-prototype="{{ form_widget(form.reponses.vars.prototype)|e('html_attr') }}">
            {# iterate over each existing tag and render its only field: name #}
            {% for reponse in form.reponses %}
                <li>{{ form_row(reponse.enonce) }}</li>
            {% endfor %}
        </ul>
        {{ form_end(form) }}
    </div>

{% endblock %}