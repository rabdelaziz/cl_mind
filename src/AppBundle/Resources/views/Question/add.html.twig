{% extends "::base.html.twig" %}

{% block title %}Ajout des questions{% endblock %}

{% block body %}
    <h3>Ajouter une nouvelle question</h3>
    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {# render the task's only field: description #}
            <div class="form-group">
                {{ form_label(form.content, "Enoncé", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.content) }}

                <div class="col-sm-4">
                    {# Génération de l'input. #}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">

                {{ form_label(form.duree, "Durée", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.duree) }}

                <div class="col-sm-4">
                    {# Génération de l'input. #}
                    {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">

                {{ form_label(form.level, "Niveau", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.level) }}

                <div class="col-sm-4">
                    {# Génération de l'input. #}
                    {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.topic, "Thème", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.topic) }}

                <div class="col-sm-4">
                    {# Génération de l'input. #}
                    {{ form_widget(form.topic, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <h3>Reponses</h3>
            <ul class="responses" data-prototype="{{ form_widget(form.responses.vars.prototype)|e('html_attr') }}">
                {# iterate over each existing tag and render its only field: name #}
                {% for response in form.responses %}
                    <li>{{ form_row(response.content) }}</li>
                {% endfor %}
            </ul>

            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script type="text/javascript">

    var $collectionHolder;

    // setup an "add a tag" link
    var $addTagLink = $('<a href="#" class="add_tag_link">Add a response</a>');
    var $newLinkLi = $('<li></li>').append($addTagLink);

    jQuery(document).ready(function() {

        // Get the ul that holds the collection of response
        var $collectionHolder = $('ul.responses');

        // add the "add a tag" anchor and li to the responses ul
        $collectionHolder.append($newLinkLi);

        // count the current form inputs we have (e.g. 2), use that as the new
        // index when inserting a new item (e.g. 2)
        $collectionHolder.data('index', $collectionHolder.find(':input').length);

        $addTagLink.on('click', function(e) {
            // prevent the link from creating a "#" on the URL
            e.preventDefault();

            // add a new tag form (see code block below)
            addTagForm($collectionHolder, $newLinkLi);
        });


    });

    function addTagForm($collectionHolder, $newLinkLi) {
        // Get the data-prototype explained earlier
        var prototype = $collectionHolder.data('prototype');

        // get the new index
        var index = $collectionHolder.data('index');

        // Replace '$$name$$' in the prototype's HTML to
        // instead be a number based on how many items we have
        var newForm = prototype.replace(/__name__/g, index);

        // increase the index with one for the next item
        $collectionHolder.data('index', index + 1);

        // Display the form in the page in an li, before the "Add a tag" link li
        var $newFormLi = $('<li></li>').append(newForm);

        // also add a remove button, just for this example
        $newFormLi.append('<a href="#" class="remove-response">x</a>');

        $newLinkLi.before($newFormLi);

        // handle the removal, just for this example
        $('.remove-response').click(function(e) {
            e.preventDefault();

            $(this).parent().remove();

            return false;
        });
    }
</script>
{% endblock %}
