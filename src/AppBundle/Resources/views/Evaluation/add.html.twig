{% extends "::layoutBack.html.twig" %}

{% block title %}Création du test{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="col-xs-9">
        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">

                    {{ form_label(form.title, null, {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(form.title) }}

                    <div class="col-sm-3">
                        {# Génération de l'input. #}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">

                    {{ form_label(form.status, null, {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(form.status) }}

                    <div class="col-sm-3">
                        {# Génération de l'input. #}
                        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">

                    {{ form_label(form.difficulty, null, {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(form.difficulty) }}

                    <div class="col-sm-3">
                        {# Génération de l'input. #}
                        {{ form_widget(form.difficulty, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <hr/>

                <table>
                    <tr>
                    {% for topic in form.topics %}
                        <td>
                            {{ form_widget(topic) }}  {{ form_label(topic) }}
                        </td>
                        <td>
                            <input type="text" name="question_numbers[{{ topic.vars.value }}]" >
                        </td>
                        {% if loop.index % 2 == 0 %}
                            </tr>
                            <tr>
                        {% endif %}
                    {% endfor %}
                    </tr>
                </table>

                <hr/>

                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

