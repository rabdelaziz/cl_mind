<div class="well">

    {{ form_start(form, {'attr': {'class': 'form'}}) }}

        <div class="form-group row">
            {{ form_label(form.firstName, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.firstName) }}
            <div class="col-sm-5">
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.lastName, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.lastName) }}
            <div class="col-sm-5">
                {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.email) }}
            <div class="col-sm-5">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.username) }}
            <div class="col-sm-5">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <input type="submit" name="add" value="Sauvegarder" class="btn btn-primary" />

        {{ form_rest(form) }}

    </form>
</div>