{% extends "::layoutBack.html.twig" %}

{% block title %}Cr√©ation des utilisateurs{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="well col-xs-9">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">
                    {{ form_label(form.firstName, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_errors(form.firstName) }}
                    <div class="col-sm-3">
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lastName, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_errors(form.lastName) }}
                    <div class="col-sm-3">
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_errors(form.email) }}
                    <div class="col-sm-3">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            	
                <input type="submit" name="add" value="Sauvegarder" class="btn btn-primary" />
                <a href="{{ path('candidate_index') }}" class="btn btn-warning" role="button" >Annuler</a>
            
        {{ form_end(form) }}
    </div>
{% endblock %}